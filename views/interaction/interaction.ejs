<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
        <script src="/js/floor/floor.js"></script>
</head>
<style>
    button {
        color: black;
    }

textarea.requestList {
    resize: none;
}
</style>
<body>
    <div class="container">
        <div class="col-md-6">
            <!-- Place for request list -->
            <h3>Lista rozkazów</h3>
            <textarea class="form-control requestList" rows="18" readonly="true">
Piętro: 0, Góra: 1, Dół: 0, Docelowe piętra : [1,2]
Opóźnienie: 1500ms
Piętro: 2, Góra: 0, Dół: 1, Docelowe piętra : [0]
Opóźnienie: 2500ms
Piętro: 3, Góra: 0, Dół: 1, Docelowe piętra : [1]
            </textarea>
            <br>
            <div class="col-sm-4 text-center">
                <button class="btn btn-default" id="interactionCallButton">Start</button>
            </div>
            <div class="col-sm-4 text-center">
                <button class="btn btn-default" id="interactionCallButton">Pauza</button>
            </div>
            <div class="col-sm-4 text-center">
                <button class="btn btn-default" id="interactionCallButton">Reset</button>
            </div>
        </div>

        <div class="col-md-6">
            <!-- Place for creating user requests -->
            <div class="row">
                <div class="col-sm-6">
                    <h3>Rozkaz przywołania</h3>
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="interactionCallFloor" class="col-sm-4 control-label">Piętro</label>
                            <div class="col-sm-8">
                                <input type="number" class="form-control" id="interactionCallFloor" value="1" min="0" max="3">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="interactionCallUp" class="col-sm-4 control-label">Góra</label>
                            <div class="col-sm-8 checkbox">
                                <label><input type="checkbox" value="3" id="interactionCallUp"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="interactionCallDown" class="col-sm-4 control-label">Dół</label>
                            <div class="col-sm-8 checkbox">
                                <label><input type="checkbox" value="3" id="dsdsad"></label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-sm-6">
                    <h3>&nbsp;</h3>
                    <div class="form-group">
                        <label class="col-sm-12">Docelowe piętra</label>
                    </div>
                    <div class="form-group">
                        <label for="destFloor3" class="col-sm-4 control-label">Piętro 3</label>
                        <div class="col-sm-8 checkbox">
                            <label><input type="checkbox" value="3" id="destFloor3"></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="destFloor2" class="col-sm-4 control-label">Piętro 2</label>
                        <div class="col-sm-8 checkbox">
                            <label><input type="checkbox" value="2" id="destFloor2"></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="destFloor1" class="col-sm-4 control-label">Piętro 1</label>
                        <div class="col-sm-8 checkbox">
                            <label><input type="checkbox" value="1" id="destFloor1"></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="destFloor0" class="col-sm-4 control-label">Piętro 0</label>
                        <div class="col-sm-8 checkbox">
                            <label><input type="checkbox" value="0" id="destFloor0"></label>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-md-offset-9">
                    <button class="btn btn-default" id="as">Dodaj</button>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <h3>Dodaj opóźnienie</h3>
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="interactionCallFloor" class="col-sm-6 control-label">Opóźnienie [ms]</label>
                            <div class="col-sm-6">
                                <input type="number" class="form-control" id="interactionCallFloor" value="1000" min="0" placeholder="ms">
                            </div>
                        </div>
                        
                    </form>
                </div>
                <div class="col-sm-6"></div>
                <div class="col-sm-3 col-sm-offset-9">
                    <button class="btn btn-default" id="interactionCallButton">Dodaj</button>
                </div>
            </div>
        </div>
    </div>
</body>

</html>